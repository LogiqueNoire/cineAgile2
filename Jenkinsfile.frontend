
pipeline {
    agent any

    environment {
        FRONTEND_BUCKET = 'cineagile-front'
        CLOUDFRONT_ID   = 'E3662XR7XOE9QU'
        FRONTEND_DIST   = 'dist' // carpeta de salida de tu build (ej. 'build')
    }

    stages {
        /*
        stage('Checkout Code') {
            steps {
                // Obtiene el código del repositorio sin pasarle nada por jenkins
                git branch: 'main', url: 'tu_url_de_repositorio_frontend.git'
            }
        }
        */

        stage('Checkout') { //Clonar repo indicado en jenkins
            steps {
                checkout scm
            }
        }

        stage('Build Frontend') {
            steps {
                sh '''
                    cd frontend
                    echo "Instalando dependencias..."
                    npm install
                    echo "Compilando aplicación (npm run build)..."
                    npm run build
                '''
            }
        }

        stage('Deploy to S3') {
            steps {
                echo "Sincronizando la carpeta ./frontend/${env.FRONTEND_DIST} con S3: s3://${env.FRONTEND_BUCKET}"
                sh "aws s3 sync ./frontend/${env.FRONTEND_DIST} s3://${env.FRONTEND_BUCKET} --delete --acl public-read"
            }
        }


        stage('Invalidate Cache (CloudFront)') {
            steps {
                echo "Invalidando caché de CloudFront ID: ${env.CLOUDFRONT_ID}"
                // Crea una invalidación para forzar a CloudFront a refrescar el caché.
                sh "aws cloudfront create-invalidation --distribution-id ${env.CLOUDFRONT_ID} --paths \"/*\""
            }
        }
    }

    post {
        success {
            echo 'Despliegue del Frontend completado exitosamente.'
        }
        failure {
            echo 'Error en el despliegue del Frontend. Revisa la etapa fallida.'
        }
    }
}